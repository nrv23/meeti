<main class="contenedor contenedor-formularios">
	<h1><%= nombrePagina%></h1>
	<form method="POST" class="default-form" enctype="multipart/form-data">
		
		<%if(grupo.imagen) {%>
			<div class="campo">
				<label>Imagen Actual</label>
				<img src="/uploads/grupos/<%= grupo.imagen%>" width="400">
			</div>
		<%} else {%>
			<<p>No hay una imagen asociada</p>
		<%}%>
		<div class="campo">
			<label>Cargar Imagen</label>
			<input type="file" name="imagen">
		</div>
		<div class="campo enviar">
			<input type="submit" value="Guardar Imagen" class="btn btn-rosa">
		</div>
	</form>
</main>