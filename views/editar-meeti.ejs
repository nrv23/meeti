
<main class="contenedor contenedor-formularios">
    <h1><%- nombrePagina %></h1>
    <form class="default-form" method="POST">
        <legend>Sobre el Meeti</legend>
        <div class="campo">
            <label>Grupo</label>
            <select name="grupoId">
                    <option value="" disabled selected>-- Selecciona Grupo --</option>
            </select>
        </div>
        <div class="campo">
            <label>Titulo</label>
            <input type="text" name="titulo">
        </div>
        <div class="campo">
            <label>Invitado</label>
            <input type="text" name="invitado">
        </div>
        <div class="columnas-2 grid">
            <div class="campo">
                <label>Fecha</label>
                <input type="date" name="fecha">
            </div>
            <div class="campo">
                <label>Hora</label>
                <input type="time" name="hora">
            </div>
        </div>
        <div class="campo">
            <label>Cupo</label>
            <input type="number" min="1" name="cupo">
        </div>
        <div class="campo descripcion">
            <label>Descripción</label>
            <div class="contenedor-editor">
                <input type="hidden" id="x" name="descripcion">
                <trix-editor input="x"></trix-editor>
            </div>
        </div>
        <legend>Ubicación Meeti</legend>
        <div class="campo buscador">
            <label>Coloca la Dirección del Meeti</label>
            <div class="contenedor-input">
                <input type="text" id="formbuscador" placeholder="Ubicación">
                <small>El asistente colocará una dirección estimada</small>
            </div>
        </div>
        <div id="editar-mapa" class="campo mapa">
            <div id="map"></div>
            <p class="informacion">Mueve el Pin hasta el punto exacto</p>
        </div>
        
        <p class="informacion">Confirma que los siguientes campos sean correctos:</p>

        <div class="campo">
            <label>Dirección</label>
            <input type="text" id="direccion" name="direccion">
        </div>
        <div class="campo">
            <label>Ciudad</label>
            <input type="text" id="ciudad" name="ciudad">
        </div>
        <div class="campo">
            <label>Estado</label>
            <input type="text" id="estado" name="estado">
        </div>
        <div class="campo">
            <label>País</label>
            <input type="text" id="pais" name="pais">
        </div>
        <div class="campo">
            <label>Latitud</label>
            <input type="text" id="lat" name="lat" readonly="readonly">
        </div>
        <div class="campo">
            <label>Longtitud</label>
            <input type="text" id="lng" name="lng" readonly="readonly">
        </div>
        <div class="campo enviar">
            <input type="submit" class="btn btn-rosa" value="Guardar Cambios">
        </div>        
    </form>
</main>
